<h1> Your listings: </h1>

<ul id='listings'>
  <% @listings.each do |listing| %>

    <li>
      <a href="/spaces/<%= listing.id %>">
       <%= listing.title %>
       <img style="width:300px" src="<%= listing.img %>">
     </a>
       <% listing.requests.each do |lr| %>
         <%= lr.username %>
         <% @current_request = lr %>
         <form action='/approve' method='post'>
            <input type="submit" value="Approve">
         </form>
         <% end %>

    </li>

  <% end %>
</ul>

<h1> Your requests: </h1>

<ul id='requests'>
  <% @requests.each do |request| %>

      <li>
      <a href="/spaces/<%= request.space.id %>">
       <%= request.space.title %>
      </a>
        <% if @current_request.approved %>
       Your booking has been approved
       <% end %>

    </li>


  <% end %>
</ul>
