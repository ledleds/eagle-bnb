
<h1><%= @space.title %></h1>
<span><img style="display:block;width:100%;" src="<%= @space.img %>" /></span>

<p><span style="font-weight:900">Details: </span><%= @space.description %></p>
<p><span style="font-weight:900">Price: </span><%= @space.price %></p>
<p><span style="font-weight:900">Available from: </span><%= @space.date_from %></p>
<p><span style="font-weight:900">Available to: </span><%= @space.date_to %></p>

<% if current_user %>
<form action='/request' method = 'get'>
<input type= 'submit' value = 'Request booking'>
</form>
<% else %>
  <% flash.now[:errors] = ['Please sign in or sign up to request a booking.']%>
<% end %>

<a href="/spaces">Back to spaces</a>
